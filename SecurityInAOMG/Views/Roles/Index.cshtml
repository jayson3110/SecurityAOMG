@model IEnumerable<SecurityInAOMG.Models.UseGroup>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_View.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/QuanlyNhom.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

<h2>Phân quyền nhóm</h2>

<div class="buttonStyle">
    <button type="button " class="active">Quản lý nhóm </button>
    <button type="button" onclick="location.href='@Url.Action("Resgister", "Resgister")'">Tạo nhóm</button>
</div>
<hr class="hrtag">

<div class="table1">

    <table id="customers">
        <tr>
            <th>

                @Html.DisplayNameFor(model => model.Group_user_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deleting)
            </th>
            <th>Chỉnh sửa nhóm người dùng</th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.DisplayFor(modelItem => item.Group_user_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Editing)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deleting)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Roles", new { id = item.Group_user_Id })"><i class="fas fa-edit"></i></a>

                    <a href="#" style="color:red; "><i class="fas fa-times"></i></a>

                </td>

            </tr>
        }

    </table>






</div>
